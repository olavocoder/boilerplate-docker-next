{
  "name": "boilerplate-next/boilerplate-next.com.br",
  "description": "Boilerplate Next",
  "require": {
    "roots/wordpress": "6.0.3",
    "wpackagist-plugin/integracao-rd-station": "^5.1"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "scripts": {
    "move-wordpress": [
      "rm -rf wordpress/wp-content/plugins/*",
      "rm -rf wordpress/wp-content/themes/*",
      "cp -rf wordpress/* .",
      "rm -rf wordpress"
    ],
    "post-install-cmd": [
      "@move-wordpress"
    ],
    "post-update-cmd": [
      "@move-wordpress"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  }
}
